<h1><%= I18n.t"list_order_items" %></h1>

<table>
  <tr>
    <th><%= I18n.t"order" %></th>
    <th><%= I18n.t"dish" %></th>
    <th><%= I18n.t"discount" %></th>
    <th><%= I18n.t"count" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.order_id %></td>
    <td><%= order_item.dish_id %></td>
    <td><%= order_item.discount %></td>
    <td><%= order_item.count %></td>
    <td><%= link_to (I18n.t"show"), order_item %></td>
    <td><%= link_to (I18n.t"edit"), edit_order_item_path(order_item) %></td>
    <td><%= link_to (I18n.t"delete"), order_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


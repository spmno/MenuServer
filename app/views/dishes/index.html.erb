<h1><%= I18n.t"list_dishes" %></h1>

<table>
  <tr>
    <th><%= I18n.t"name" %></th>
    <th><%= I18n.t"description" %></th>
    <th><%= I18n.t"image" %></th>
    <th><%= I18n.t"price" %></th>
    <th><%= I18n.t"kind" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
    <td><%= dish.name %></td>
    <td><%= dish.description %></td>
    <td><%= dish.photo %></td>
    <td><%= dish.price %></td>
    <td><%= dish.dish_kind.name %></td>
    <td><%= link_to (I18n.t"show"), dish %></td>
    <td><%= link_to (I18n.t"edit"), edit_dish_path(dish) %></td>
    <td><%= link_to (I18n.t"delete"), dish, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to (I18n.t"new_dish"), new_dish_path, :class => "btn btn-primary btn-lg" %>
